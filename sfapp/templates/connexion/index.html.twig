<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <!-- Inclusion de la feuille de style -->
    <link rel="stylesheet" href="{{ asset('style/style.css') }}" />
    <title>Connexion</title>
</head>
<body>
<div class="container connexion-container">
    {# Affichage des messages d'erreur #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error">
            {{ message }}
        </div>
    {% endfor %}

    <div class="connexion">
        <div class="title">
            <!-- Logo Smart Campus -->
            <img class="logo" src="{{ asset('img/logo.jpg') }}" alt="logo">
            <h1>Smart Campus.</h1>
        </div>
        <p>Choisissez votre profil :</p>
        <!-- Liens vers les profils -->
        <button class="gradient-button btn-charge-mission" onclick="afficherFormChargeMission()">Charg√© de mission</button>
        <button class="gradient-button btn-technicien" onclick="afficherFormTechnicien()">Technicien</button>

    </div>

    <div id="overlay">
        <div class="connexion-form">
            <h1>Connexion</h1>
            <h2></h2>
            <!-- Formulaire de connexion -->
            <form action="{{ path('app_connexion') }}" method="post">
                <input type="hidden" id="username" name="_username">

                <input type="password" id="password" name="_password" placeholder="Mot de passe">
                <input id="target-path" type="hidden" name="_target_path">

                <button type="submit">Se connecter</button>
            </form>
        </div>
    </div>

</div>

<!-- Script pour les effets de souris -->
<script src="{{ asset('js/connexionForm.js') }}"></script>
<script src="{{ asset('js/mouseTrail.js') }}"></script>
<script src="{{ asset('js/flashMessage.js') }}"></script>

</body>
</html>
