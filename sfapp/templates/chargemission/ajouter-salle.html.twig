{% extends 'base.html.twig' %}

{% block title %}Ajout d'une salle au plan d'expérimentation - Chargé de mission
{% endblock %}

{% block navlink %}
    <li>
        <a class="nav-link" href="/charge-de-mission/tableau-de-bord">Tableau de bord</a>
    </li>
    <li>
        <a class="nav-link" href="/charge-de-mission/liste-salles">Salles</a>
    </li>
    <li>
        <a class="nav-link current-page">Plan d'expérimentation</a>
    </li>
{% endblock %}

{% block appcontent %}
    <div class="app-content cm-pe">

        {# Titre #}
        <h3>DEMANDE D'INSTALLATION</h3>

        {# ------------------------------------------------------ #}

        {# CONTAINER (fond gris) #}
        <div class="container">

            {# Titre et description #}
            {% if  existedeja  == 1 %}
                <h4>La salle {{ nomsalle }} est déjà dans le plan d'expérimentation !</h4>
                <p>
                    Retournez à l'accueil si vous souhaitez la retirer du plan d'expérimentation
                </p>
                <div class="confirm-buttons">
                    <a href="/charge-de-mission/plan-experimentation" class="cancel-button">Retour</a>
                </div>
            {% elseif SADispo == 0 %}
                <h4>Il n'y a plus de SA disponible pour la salle {{ nomsalle }}  !</h4>
                <p>
                    Retournez au plan d'expérimentation pour en retirer un puis revenez sur cette salle pour en ajouter un.
                </p>
                <div class="confirm-buttons">
                    <a href="/charge-de-mission/plan-experimentation" class="cancel-button">Retour</a>
                </div>
            {% else %}

                <h4>Ajouter la salle {{ nomsalle }} au plan d'expérimentation ?</h4>
                <p>
                    Cela ajoutera une demande d'installation d'un système d'acquisition en salle {{ nomsalle }} pour le technicien.
                </p>
                <div class="confirm-buttons">
                    <a href="/charge-de-mission/plan-experimentation" class="cancel-button">Annuler</a>
                    <a href="/charge-de-mission/plan-experimentation/ajout-experimentation/{{nomsalle}}" class="confirm-button">Valider</a>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/filter.js') }}"></script>
{% endblock %}
