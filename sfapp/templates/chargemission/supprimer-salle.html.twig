{% extends 'base.html.twig' %}

{% block title %}SmartCampus. - Chargé de mission
{% endblock %}


{% block username %}Chargé de mission
{% endblock %}

{% block navlink %}
    <li>
        <a class="nav-link" href="/charge-de-mission/tableau-de-bord">Tableau de bord</a>
        <a class="nav-link" href="/charge-de-mission/plan-experimentation">Plan d'expérimentation</a>
        <a class="nav-link" href="/charge-de-mission/liste-salles">Expérimentation en cours</a>
    </li>
{% endblock %}

{% block appcontent %}
    <div class="app-content cm-pe">

        {# Titre #}
        <h3>RETRAIT DE LA SALLE {{ nomsalle }}</h3>

        {# ------------------------------------------------------ #}

        {# CONTAINER (fond gris) #}
        <div class="container">

            {# Titre et description #}
            {% if  existedeja  == 1 %}
            <h4>Supprimer la salle {{ nomsalle }} du plan d'expérimentation ?</h4>
            <p>
                Cela annulera la demande d'installation d'un système d'acquisition pour la salle {{ nomsalle }} pour le technicien.
            </p>

            <div class="confirm-buttons">
                <a href="/charge-de-mission/plan-experimentation" class="cancel-button">Annuler</a>
                <a href="/charge-de-mission/plan-experimentation/supprimer-experimentation/{{nomsalle}}" class="confirm-button">Valider</a>
            </div>
            {% else %}
            <h4>La salle {{ nomsalle }} n'est pas encore dans le plan d'expérimentation !</h4>
            <p>
                Retournez à l'accueil si vous souhaitez l'ajouter au plan d'expérimentation
            </p>
            <div class="confirm-buttons">
                <a href="/charge-de-mission/plan-experimentation" class="cancel-button">Retour</a>
            </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/filter.js') }}"></script>
{% endblock %}
