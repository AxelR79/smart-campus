<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <!-- Icône de l'onglet -->
    <link rel="icon" href="{{ asset('img/logo.jpg') }}">
    {# <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'> #}
    {% block stylesheets %}
        <!-- Inclusion de la feuille de style -->
        <link rel="stylesheet" href="{{ asset('style/style.css') }}">
    {% endblock %}
</head>
<body>
<!-- Bannière avec le titre SmartCampus -->
<div class="banner">
    <div class="right-content">
        <!-- Lien de déconnexion avec icônes -->
        <a class="link" href="{{ path('app_deconnexion') }}">
            <div class="circle_icon">
                <img src="{{ asset('img/leave_left.png') }}" alt="leave_left" class="leave_left">
                <img src="{{ asset('img/leave_right.png') }}" alt="leave_right" class="leave_right">
            </div>
        </a>
        <!-- Titre et sous-titre -->
        <h1>SmartCampus.</h1>
        <h2>[DASHBOARD Bêta]</h2>
    </div>

    <div class="left-content">
        <!-- Affichage du nom d'utilisateur -->
        <p>
            {% if app.user.roles[0] == 'ROLE_CHARGEMISSION' %}
                Chargé de mission
            {% elseif app.user.roles[0] == 'ROLE_TECHNICIEN' %}
                Technicien
            {% endif %}
        </p>

        <!-- Icône utilisateur -->
        <img  src="{{ asset('img/user.png') }}" alt="Icone user">
    </div>
</div>

<!-- Contenu de l'application avec barre latérale -->
<div class="app-container">
    <div class="sidebar">
        <div class="menu">
            <h3>Menu</h3>
            <ul>
                <!-- Liens du menu à personnaliser dans les vues enfants -->
                {% block navlink %}
                    {% if app.user.roles[0] == 'ROLE_CHARGEMISSION' %}
                        <li>
                            <a class="nav-link" href="/charge-de-mission/tableau-de-bord">Tableau de bord</a>
                        </li>
                        <li>
                            <a class="nav-link current-page">Salles</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/charge-de-mission/plan-experimentation">Plan d'expérimentation</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/charge-de-mission/modifier">Modifier le mot de passe</a>
                        </li>
                    {% elseif app.user.roles[0] == 'ROLE_TECHNICIEN' %}
                        <li><a class="nav-link current-page" href="/technicien/liste-souhaits">Plan d'expérimentation</a></li>
                        <li><a class="nav-link" href="/technicien/gestion-sa">Gestion des SA</a></li>
                        <li><a class="nav-link" href="/technicien/modifier">Modifier le mot de passe</a></li>
                    {% endif %}
                {% endblock %}
            </ul>
        </div>
        {% block sidebar %}
        {% endblock %}
    </div>

    <!-- Contenu principal à définir dans les vues enfants -->
    {% block appcontent %}

    {% endblock %}
</div>

<!-- Scripts JavaScript à personnaliser dans les vues enfants -->
{% block javascripts %}
{% endblock %}

</body>
</html>
