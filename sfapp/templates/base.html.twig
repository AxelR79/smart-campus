<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <!-- Icône de l'onglet -->
    <link rel="icon" href="{{ asset('img/logo.jpg') }}">
    {# <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'> #}
    {% block stylesheets %}
        <!-- Inclusion de la feuille de style -->
        <link rel="stylesheet" href="{{ asset('style/style.css') }}">
    {% endblock %}
</head>
<body>
<!-- Bannière avec le titre SmartCampus -->
<div class="banner">
    <div class="right-content">
        <!-- Lien de déconnexion avec icônes -->
        <a class="link" href="{{ path('app_deconnexion') }}">
            <div class="circle_icon">
                <img src="{{ asset('img/leave_left.png') }}" alt="leave_left" class="leave_left">
                <img src="{{ asset('img/leave_right.png') }}" alt="leave_right" class="leave_right">
            </div>
        </a>
        <!-- Titre et sous-titre -->
        <h1>SmartCampus.</h1>
        <h2>[DASHBOARD Bêta]</h2>
    </div>

    <div class="left-content">
        <!-- Affichage du nom d'utilisateur -->
        <p>
            {% if app.user == null %}
                <button class="gradient-button btn-technicien" href="/">Se connecter</button>
            {% elseif app.user.roles[0] == 'ROLE_CHARGEMISSION' %}
                Chargé de mission
                <!-- Icône utilisateur -->
                <img  src="{{ asset('img/user.png') }}" alt="Icone user">
            {% elseif app.user.roles[0] == 'ROLE_TECHNICIEN' %}
                Technicien
                <!-- Icône utilisateur -->
                <img  src="{{ asset('img/user.png') }}" alt="Icone user">
            {% endif %}
        </p>
    </div>
</div>


<!-- Contenu de l'application avec barre latérale -->
<div class="app-container">
    {% if app.user != null %}
    <div class="sidebar">
        <div class="menu">
            <h3>Menu</h3>
            <ul>
                <!-- Liens du menu à personnaliser dans les vues enfants -->
                {% block navlink %}
                {% endblock %}
            </ul>
        </div>
        {% block sidebar %}
        {% endblock %}
    </div>
    {% endif %}
    <!-- Contenu principal à définir dans les vues enfants -->
    {% block appcontent %}

    {% endblock %}
</div>

<!-- Scripts JavaScript à personnaliser dans les vues enfants -->
{% block javascripts %}
{% endblock %}

</body>
</html>
