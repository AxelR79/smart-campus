{% extends 'base.html.twig' %}

{% block title %}SmartCampus. - Technicien{% endblock %}

{% block username %}Technicien{% endblock %}

{% block navlink %}
    <li><a class="nav-link" href="liste-souhaits">Liste de souhaits</a></li>
    <li><a class="nav-link" href="gestion-sa">Gestion des SA</a></li>
{% endblock %}

{% block appcontent %}
    <div class="app-content souhaits">
        <h3 class="">Gestion des SA</h3>

        <div class="container">
            <h4>Liste des SA</h4>
            <div class="search-and-filter">

                {{ form_start(rechercheSAForm) }}
                {{ form_widget(rechercheSAForm.nom) }}

                <button type='submit'><img src="{{ asset('img/search.svg') }}" alt="Rechercher"></button>

                {{ form_end(rechercheSAForm, {'render_rest': false}) }}
            </div>

            {% if SA|length == 0 %}
                <div class="souhait" style="justify-content: center;">
                    <p>Aucun SA pour le moment...</p>
                </div>
            {% endif %}
            <div class="souhait">
                <a href="gestion-sa/ajouter-sa" class="cancel-button">Ajouter un SA dans le stock</a>
            </div>
            {% if SA|length > 0 %}
                {% for sa in SA %}
                    <div class="souhait">
                        <div class="souhait-info">
                            <h5>{{ sa.nom }}</h5>
                            {% if sa.disponible == 1 %}
                                <p>Salle associée : Aucune</p>
                            {% else %}
                                {% for exp in experimentations %}
                                    <div class="souhait">
                                        <div class="souhait-info">
                                            {% if sa == exp.sa %}
                                                    <p>Salle associée : {{exp.salle.getNom()}} etat : </p>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}

                            <a href=# class="salle-bouton">detail</a>
                            <a href=# class="salle-bouton">supprimer</a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}